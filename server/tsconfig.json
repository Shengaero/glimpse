{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "node",
    "newLine": "lf",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "sourceMap": false,
    "outDir": "./build"
  },
  "include": [
    "config/**/*.{ts, js}",
    "models/**/*.{ts, js}",
    "routes/**/*.{ts, js}",
    "schemas/**/*.{ts, js}",
    "seeders/**/*.{ts, js}",
    "utils/**/*.{ts, js}",
    "ws/**/*.{ts, js}",
    "server.ts"
  ]
}
